<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Header Style -->
    <style name="headerStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">56sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Button Style -->
    <style name="buttonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- Question Style -->
    <style name="questionStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- LinearLayout for Radiobutton and Checkbox Style -->
    <style name="answersLLStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">56dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/question</item>
    </style>

    <!-- LinearLayout for Radiobutton and Checkbox Style -->
    <style name="answersWithButtonsLLStyle" parent="answersLLStyle">
        <item name="layout_marginLeft">36dp</item>
    </style>

    <!-- LinearLayout for EditText Style -->
    <style name="answersWithTextLLStyle" parent="answersLLStyle">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
